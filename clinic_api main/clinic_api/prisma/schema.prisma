generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:senai@127.0.0.1:5432/clinicadb"
}

model Token {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    Int
  user Usuario @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  revoked   Boolean  @default(false)  // ← ADICIONAR ESTA LINHA!
}

// Tabela usuario
model Usuario {
  id         Int          @id @default(autoincrement())
  nome       String
  email      String       @unique
  senha      String
  cargo      String
  Prontuario Prontuario[]
   tokens Token[]  // ← ADICIONE ESTA LINHA (lado oposto da relação)

  @@map("usuario")
}

model Prontuario {
  id                    Int      @id @default(autoincrement())
  descricao             String
  data                  DateTime
  medico_responsavel_id Int
  paciente_id           Int
  paciente              Paciente @relation(fields: [paciente_id], references: [id])
  usuario               Usuario  @relation(fields: [medico_responsavel_id], references: [id])

  @@map("prontuario")
}

model Consulta {
  id                    Int      @id @default(autoincrement())
  motivo                String
  data_consulta         DateTime
  observacoes           String
  medico_responsavel_id Int
  paciente_id           Int
  paciente              Paciente @relation(fields: [paciente_id], references: [id])

  @@map("consulta")
}

model Paciente {
  id              Int          @id @default(autoincrement())
  nome            String
  cpf             String
  telefone        String
  email           String
  data_nascimento DateTime
  sexo            String
  responsavel     String?
  Prontuario      Prontuario[]
  Consulta        Consulta[]
  Exame           Exame[]

  @@map("paciente")
}

model Exame {
  id           Int      @id @default(autoincrement())
  tipo_exame   String
  resultado    String
  data_exame   DateTime
  link_arquivo String
  observacoes  String
  paciente_id  Int
  paciente     Paciente @relation(fields: [paciente_id], references: [id])

  @@map("exame")
}
